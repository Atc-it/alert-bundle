<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="atc_alert.mail_from_default" />
        <parameter key="atc_alert.sms_url" />
        <parameter key="atc_alert.sms_key" />
        <parameter key="atc_alert.sms_secret" />
    </parameters>
    
    <services>
        <service id="atc_alert.sender" class="Atc\Bundle\AlertBundle\Service\Sender">
            <argument type="service" id="mailer" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%atc_alert.mail_from_default%</argument>
            <argument>%atc_alert.sms_url%</argument>
            <argument>%atc_alert.sms_key%</argument>
            <argument>%atc_alert.sms_secret%</argument>
        </service>
    
        <service id="atc_alert.alert.manager" class="Atc\Bundle\AlertBundle\Manager\AlertManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="atc_alert.sender" />
        </service>
    </services>
    
</container>
